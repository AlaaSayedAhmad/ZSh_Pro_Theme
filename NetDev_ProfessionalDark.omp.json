{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "name": "Alaa_NetDev_Fusion_LinuxTV",
  "version": 3,
  "final_space": true,

  "blocks": [
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        { "type": "time", "style": "plain", "foreground": "#00ff88", "template": "ÔÄó {{ .CurrentDate | date \"15:04:05\" }} " },
        { "type": "ipify", "style": "plain", "foreground": "#00ffaa", "template": "| üåê {{ .IP }} " },
        { "type": "ping", "style": "plain", "foreground": "#00ff88", "properties": { "target": "8.8.8.8", "timeout": 1000 }, "template": "| üì∂ {{ .Latency }}ms " },
        { "type": "git", "style": "plain", "foreground": "#a8ffcc", "properties": { "fetch_status": true, "branch_icon": "Óú• " }, "template": "| Óú• {{ .Branch }}{{ if .Working.Changed }} ‚úèÔ∏è{{ end }} " },
        { "type": "python", "style": "plain", "foreground": "#66ffcc", "properties": { "display_mode": "version", "display_virtual_env": true }, "template": "| Óàµ {{ .Full }} " },
        { "type": "node", "style": "plain", "foreground": "#33ffaa", "properties": { "display_mode": "files", "fetch_version": true }, "template": "| Óúò {{ .Full }} " },
        { "type": "docker", "style": "plain", "foreground": "#00ffaa", "properties": { "display_mode": "context" }, "template": "| üê≥ {{ .Context }} " }
      ]
    },

    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        { "type": "os", "style": "diamond", "background": "#0f0f0f", "foreground": "#00ff88", "leading_diamond": "\ue0b6", "template": " {{ .Icon }} {{ .HostName }} ", "properties": { "linux": "Óúí", "windows": "ÔÖ∫" } },
        { "type": "session", "style": "powerline", "powerline_symbol": "\ue0b0", "background": "#1a1a1a", "foreground": "#00ffaa", "template": " üë§ {{ .UserName }} " },
        { "type": "shell", "style": "powerline", "powerline_symbol": "\ue0b0", "background": "#242424", "foreground": "#00ff88", "template": " üñ•Ô∏è {{ .Name }} " },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "background": "#2e2e2e",
          "foreground": "#a8ffcc",
          "properties": {
            "style": "agnoster_full",
            "max_depth": 3,
            "folder_separator_icon": " ÓÇ± ",
            "home_icon": "~",
            "mapped_locations_enabled": true,
            "mapped_locations": {
              "~/Documents": "Ôúò ~/Documents",
              "~/Downloads": "ÔÄô ~/Downloads",
              "~/Desktop": "ÔÑà ~/Desktop",
              "~/Projects": "Óûñ ~/Projects"
            }
          },
          "template": " ÔÅª {{ .Path }} "
        },
        { "type": "kubectl", "style": "powerline", "powerline_symbol": "\ue0b0", "background": "#0f382a", "foreground": "#00ffaa", "template": " ‚ò∏Ô∏è {{ .Context }} {{ if .Namespace }}({{ .Namespace }}){{ end }} " },
        { "type": "aws", "style": "powerline", "powerline_symbol": "\ue0b0", "background": "#004d40", "foreground": "#00ffaa", "template": " Óû≠ {{ .Profile }}@{{ .Region }} " },
        { "type": "executiontime", "style": "powerline", "powerline_symbol": "\ue0b0", "background": "#1a3c34", "foreground": "#00ff88", "properties": { "threshold": 400 }, "template": " ‚öôÔ∏è {{ .FormattedMs }} " },
        { "type": "status", "style": "powerline", "powerline_symbol": "\ue0b0", "background_templates": [ "{{ if gt .Code 0 }}#ff5555{{ else }}#00ff88{{ end }}" ], "foreground": "#0f0f0f", "properties": { "always_enabled": true }, "template": " {{ if gt .Code 0 }}ÔÅ™ {{ .Code }}{{ else }}ÔÅò{{ end }} " }
      ]
    }
  ],
  "transient_prompt": { "foreground": "#00ff88", "template": "Œª " }
}
